@page "{id:int?}"
@model LionPetManagement_ToanHH.Pages.LionProfiles.DetailsModel

@{
    ViewData["Title"] = "Lion Profile Details";
}

<style>
    :root {
        --purple-500: #7b2cbf;
        --purple-600: #6f2bb0;
        --purple-400: #9b6edb;
    }

    .lp-header {
        background: linear-gradient(90deg, var(--purple-600), var(--purple-400));
        color: #fff;
        padding: 1.25rem 1rem;
        border-radius: .5rem;
        margin-bottom: 1.5rem;
    }

    .lp-card {
        border: 1px solid rgba(123,44,191,.12);
        border-radius: .6rem;
        box-shadow: 0 6px 18px rgba(123,44,191,.06);
    }

    .detail-row {
        padding: 1rem 0;
        border-bottom: 1px solid #f0f0f0;
    }

    .detail-row:last-child {
        border-bottom: none;
    }

    .detail-label {
        font-weight: 600;
        color: var(--purple-600);
        margin-bottom: .25rem;
    }

    .detail-value {
        color: #333;
        font-size: 1.05rem;
    }

    .lp-btn {
        background: var(--purple-500);
        border: 1px solid var(--purple-600);
        color: #fff;
    }

    .lp-btn:hover {
        filter: brightness(.95);
        color: #fff;
    }

    .badge-purple {
        background: var(--purple-500);
        color: #fff;
        padding: .5rem 1rem;
        border-radius: .25rem;
    }
</style>

<div class="container py-4">
    <div class="lp-header">
        <h3 class="mb-0">👁️ Lion Profile Details</h3>
        <small>Chi tiết thông tin hồ sơ sư tử</small>
    </div>

    <div class="lp-card">
        <div class="card-header bg-light">
            <h4 class="mb-0">
                🦁 <strong>@Model.LionProfile?.LionName</strong>
                <span class="badge badge-purple ml-2">@Model.LionProfile?.LionType?.LionTypeName</span>
            </h4>
        </div>
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-6 detail-row">
                    <dt class="detail-label">🦁 Lion Name</dt>
                    <dd class="detail-value">@Html.DisplayFor(model => model.LionProfile.LionName)</dd>
                </div>

                <div class="col-md-6 detail-row">
                    <dt class="detail-label">⚖️ Weight</dt>
                    <dd class="detail-value">@Html.DisplayFor(model => model.LionProfile.Weight) kg</dd>
                </div>

                <div class="col-12 detail-row">
                    <dt class="detail-label">📋 Characteristics</dt>
                    <dd class="detail-value">@Html.DisplayFor(model => model.LionProfile.Characteristics)</dd>
                </div>

                <div class="col-12 detail-row">
                    <dt class="detail-label">⚠️ Warning</dt>
                    <dd class="detail-value">
                        <div class="alert alert-warning mb-0" role="alert">
                            @Html.DisplayFor(model => model.LionProfile.Warning)
                        </div>
                    </dd>
                </div>

                <div class="col-md-6 detail-row">
                    <dt class="detail-label">📅 Modified Date</dt>
                    <dd class="detail-value">@(Model.LionProfile?.ModifiedDate.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</dd>
                </div>

                <div class="col-md-6 detail-row">
                    <dt class="detail-label">🏷️ Lion Type</dt>
                    <dd class="detail-value">
                        @Html.DisplayFor(model => model.LionProfile.LionType.LionTypeName)
                        <small class="text-muted">(ID: @Html.DisplayFor(model => model.LionProfile.LionType.LionTypeId))</small>
                    </dd>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-page="./Update" asp-route-id="@Model.LionProfile?.LionProfileId" class="btn lp-btn btn-lg">✏️ Edit Profile</a>
        <a asp-page="./Index" class="btn btn-secondary btn-lg ml-2">🔙 Back to List</a>
    </div>
</div>
