@page "{id:int?}"
@model LionPetManagement_ToanHH.Pages.LionProfiles.DeleteModel

@{
    ViewData["Title"] = "Delete Lion Profile";
}

<style>
    :root {
        --purple-500: #7b2cbf;
        --purple-600: #6f2bb0;
        --purple-400: #9b6edb;
    }

    .lp-header {
        background: linear-gradient(90deg, #dc3545, #c82333);
        color: #fff;
        padding: 1.25rem 1rem;
        border-radius: .5rem;
        margin-bottom: 1.5rem;
    }

    .lp-card {
        border: 1px solid rgba(220, 53, 69, .12);
        border-radius: .6rem;
        box-shadow: 0 6px 18px rgba(220, 53, 69, .06);
    }

    .detail-row {
        padding: .75rem 0;
        border-bottom: 1px solid #f0f0f0;
    }

    .detail-row:last-child {
        border-bottom: none;
    }

    .detail-label {
        font-weight: 600;
        color: #dc3545;
    }

    .alert-warning {
        background-color: #fff3cd;
        border-color: #ffc107;
        border-left: 4px solid #ffc107;
    }
</style>

<div class="container py-4">
    <div class="lp-header">
        <h3 class="mb-0">🗑️ Delete Lion Profile</h3>
        <small>Xác nhận xóa hồ sơ sư tử</small>
    </div>

    <div class="alert alert-warning mb-4" role="alert">
        <h5 class="alert-heading"><strong>⚠️ Warning!</strong></h5>
        <p class="mb-0">Bạn có chắc chắn muốn xóa hồ sơ <strong>"@Model.LionProfile?.LionName"</strong> không?</p>
        <hr>
        <p class="mb-0 small">Hành động này không thể hoàn tác và sẽ xóa vĩnh viễn dữ liệu!</p>
    </div>

    <div class="lp-card">
        <div class="card-header bg-light">
            <h5 class="mb-0">📋 Thông tin hồ sơ sẽ bị xóa</h5>
        </div>
        <div class="card-body p-4">
            <dl class="row mb-0">
                <div class="col-md-6 detail-row">
                    <dt class="detail-label">🦁 Lion Name</dt>
                    <dd>@Html.DisplayFor(model => model.LionProfile.LionName)</dd>
                </div>

                <div class="col-md-6 detail-row">
                    <dt class="detail-label">⚖️ Weight</dt>
                    <dd>@Html.DisplayFor(model => model.LionProfile.Weight) kg</dd>
                </div>

                <div class="col-12 detail-row">
                    <dt class="detail-label">📋 Characteristics</dt>
                    <dd>@Html.DisplayFor(model => model.LionProfile.Characteristics)</dd>
                </div>

                <div class="col-12 detail-row">
                    <dt class="detail-label">⚠️ Warning</dt>
                    <dd>@Html.DisplayFor(model => model.LionProfile.Warning)</dd>
                </div>

                <div class="col-md-6 detail-row">
                    <dt class="detail-label">📅 Modified Date</dt>
                    <dd>@Html.DisplayFor(model => model.LionProfile.ModifiedDate)</dd>
                </div>

                <div class="col-md-6 detail-row">
                    <dt class="detail-label">🏷️ Lion Type</dt>
                    <dd>@Html.DisplayFor(model => model.LionProfile.LionType.LionTypeName)</dd>
                </div>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <div class="row">
            <div class="col-md-6">
                <div class="card border-warning">
                    <div class="card-header bg-warning text-white">
                        <h6 class="mb-0"><i class="fas fa-bolt"></i> Delete with SignalR (Real-time)</h6>
                    </div>
                    <div class="card-body">
                        <p class="mb-2">Xóa với SignalR - thông báo real-time cho tất cả người dùng</p>
                        <form method="post">
                            <input type="hidden" asp-for="LionProfile.LionProfileId" />
                            <button type="submit" class="btn btn-warning btn-lg btn-block">
                                <i class="fas fa-trash-alt"></i> 🗑️ Delete with SignalR
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card border-danger">
                    <div class="card-header bg-danger text-white">
                        <h6 class="mb-0"><i class="fas fa-trash"></i> Regular Delete</h6>
                    </div>
                    <div class="card-body">
                        <p class="mb-2">Xóa thông thường - không có thông báo real-time</p>
                        <form method="post" asp-page-handler="DeleteRegular">
                            <input type="hidden" asp-for="LionProfile.LionProfileId" />
                            <button type="submit" class="btn btn-danger btn-lg btn-block">
                                <i class="fas fa-trash-alt"></i> 🗑️ Regular Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-3 text-center">
            <a asp-page="./Index" class="btn btn-secondary btn-lg">
                <i class="fas fa-times"></i> 🔙 Cancel
            </a>
        </div>
    </div>
</div>