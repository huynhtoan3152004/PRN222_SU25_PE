@page "{id:int?}"
@model LionPetManagement_ToanHH.Pages.LionProfiles.UpdateModel

@{
    ViewData["Title"] = "Update Lion Profile";
}

<style>
    :root {
        --purple-500: #7b2cbf;
        --purple-600: #6f2bb0;
        --purple-400: #9b6edb;
    }

    .lp-header {
        background: linear-gradient(90deg, var(--purple-600), var(--purple-400));
        color: #fff;
        padding: 1.25rem 1rem;
        border-radius: .5rem;
        margin-bottom: 1.5rem;
    }

    .lp-card {
        border: 1px solid rgba(123,44,191,.12);
        border-radius: .6rem;
        box-shadow: 0 6px 18px rgba(123,44,191,.06);
    }

    .lp-btn {
        background: var(--purple-500);
        border: 1px solid var(--purple-600);
        color: #fff;
    }

    .lp-btn:hover {
        filter: brightness(.95);
        color: #fff;
    }

    .form-control:focus, .form-select:focus {
        border-color: var(--purple-500);
        box-shadow: 0 0 0 .15rem rgba(123,44,191,.15);
    }

    .form-label {
        font-weight: 500;
        color: var(--purple-600);
    }
</style>

<div class="container py-4">
    <div class="lp-header">
        <h3 class="mb-0">✏️ Update Lion Profile</h3>
        <small>Cập nhật thông tin hồ sơ sư tử</small>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>✅</strong> @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="lp-card">
        <div class="card-body p-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="LionProfile.LionProfileId" />
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="LionProfile.LionName" class="form-label">🦁 Lion Name</label>
                            <input asp-for="LionProfile.LionName" class="form-control" placeholder="Enter lion name" />
                            <span asp-validation-for="LionProfile.LionName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="LionProfile.Weight" class="form-label">⚖️ Weight (kg)</label>
                            <input asp-for="LionProfile.Weight" class="form-control" type="number" step="0.01" placeholder="Enter weight" />
                            <span asp-validation-for="LionProfile.Weight" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="LionProfile.Characteristics" class="form-label">📋 Characteristics</label>
                    <textarea asp-for="LionProfile.Characteristics" class="form-control" rows="3" placeholder="Enter characteristics"></textarea>
                    <span asp-validation-for="LionProfile.Characteristics" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="LionProfile.Warning" class="form-label">⚠️ Warning</label>
                    <textarea asp-for="LionProfile.Warning" class="form-control" rows="2" placeholder="Enter warning information"></textarea>
                    <span asp-validation-for="LionProfile.Warning" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="LionProfile.LionTypeId" class="form-label">🏷️ Lion Type</label>
                    <select asp-for="LionProfile.LionTypeId" class="form-control" asp-items="ViewBag.LionTypeId">
                        <option value="">-- Select Lion Type --</option>
                    </select>
                    <span asp-validation-for="LionProfile.LionTypeId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn lp-btn">💾 Update Profile</button>
                    <a asp-page="./Index" class="btn btn-secondary ml-2">🔙 Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}